{
    "env": {
        "browser": true,
        "node": true
    },

    "globals": {
        "angular": false,
        "describe": false,
        "xdescribe": false,
        "it": false,
        "xit": false,
        "expect": false,
        "beforeEach": false,
        "afterEach": false,
        "spyOn": false,
        "by": false,
        "fail": false,
        "element": false,
        "browser": false,
        "jasmine": false,
        "module": false,
        "inject": false
    },

    "rules": {
        "eqeqeq": [2, "allow-null"],
        "quotes": [2, "single", "avoid-escape"],
        "no-underscore-dangle": 0,
        "no-unused-vars": 0,
        "valid-jsdoc": 2,
        "valid-typeof": 2
    }
}
