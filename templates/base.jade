doctype html
html(itemscope="", itemtype="http://schema.org/Article")
	// Render "Variables" Block:
	block variables

	head
		// Include "_head" Partial:
		include _head

		- var currentPageTitle = pageTitle + (siteTitle ? ' - ' + siteTitle : '');
		title #{currentPageTitle}

		// Render "head_scripts" Block:
		block head_scripts

	body.Site
		// Include "_analytics" Partial:
		include _analytics

		aside.Site-sidebar#sidebar
			include _nav-header
			include _nav

		main.Site-main
			include _header
			div.Content
				div.u-lg-hidden
					// Render "_titles" Partial:
					include _titles
				// Render "content" Block:
				block content
				// Render "tech" Block:
				block tech

